<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Sutodero</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>sutodero</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Permisos de Cámara -->
	<key>NSCameraUsageDescription</key>
	<string>SU TODERO necesita acceso a la cámara para tomar fotos de propiedades, tickets y inventarios.</string>
	
	<!-- Permisos de Galería/Fotos -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>SU TODERO necesita acceso a tu galería para seleccionar fotos de propiedades e inventarios.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>SU TODERO necesita guardar fotos en tu galería.</string>
	
	<!-- Permisos de Ubicación -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>SU TODERO necesita tu ubicación para registrar la ubicación de propiedades y tickets.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>SU TODERO necesita acceso a tu ubicación para funciones de seguimiento de técnicos.</string>
	
	<!-- Permisos de Bluetooth (para cámaras 360°) -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>SU TODERO necesita Bluetooth para conectar con cámaras 360° compatibles.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>SU TODERO usa Bluetooth para comunicarse con dispositivos de captura 360°.</string>
	
	<!-- Permisos de Micrófono (para videos) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>SU TODERO necesita acceso al micrófono para grabar videos de propiedades.</string>
	
	<!-- Firebase Cloud Messaging (Notificaciones Push) -->
	<key>FirebaseAppDelegateProxyEnabled</key>
	<false/>
	
	<!-- Soporte de orientaciones y multitarea iPad -->
	<key>UIRequiresFullScreen</key>
	<false/>
	<key>UIStatusBarHidden</key>
	<false/>
	
	<!-- App Transport Security (permite conexiones seguras) -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>
</dict>
</plist>
