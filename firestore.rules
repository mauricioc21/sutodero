rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función auxiliar para obtener el rol del usuario autenticado
    function getUserRole() {
      return isAuthenticated()
          ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol
          : null;
    }
    
    // Función auxiliar para verificar si el usuario es administrador o coordinador
    function isAdmin() {
      let role = getUserRole();
      let roleLower = role == null ? '' : role.lower().trim();
      return roleLower == 'admin' ||
             roleLower == 'administrador' ||
             roleLower == 'coordinador' ||
             roleLower == 'coordinator' ||
             roleLower == 'super_admin';
    }
    
    // Función auxiliar para verificar si es el propietario del recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Función auxiliar para saber si el usuario está asociado al ticket como cliente
    function isTicketClient(ticketData) {
      return isAuthenticated() && (
        ticketData.clienteId == request.auth.uid ||
        (ticketData.cliente != null && ticketData.cliente.id == request.auth.uid)
      );
    }
    
    // Función auxiliar para verificar si el usuario es el técnico/maestro asignado al ticket
    function isTicketTechnician(ticketData) {
      return isAuthenticated() && (
        ticketData.tecnicoId == request.auth.uid ||
        ticketData.toderoId == request.auth.uid ||
        ticketData.maestroId == request.auth.uid ||
        (ticketData.maestroAsignado != null && ticketData.maestroAsignado.id == request.auth.uid)
      );
    }
    
    // Función auxiliar para saber si el usuario puede leer un ticket
    function canReadTicket(ticketData) {
      return isAdmin() ||
             isOwner(ticketData.userId) ||
             isTicketClient(ticketData) ||
             isTicketTechnician(ticketData);
    }
    
    // Reglas para colección de usuarios
    match /users/{userId} {
      // Permitir lectura si es el propio usuario o es admin
      allow read: if isOwner(userId) || isAdmin();
      
      // Permitir crear solo su propio perfil durante registro
      allow create: if isOwner(userId);
      
      // Permitir actualizar solo su propio perfil o si es admin
      allow update: if isOwner(userId) || isAdmin();
      
      // Solo admins pueden eliminar usuarios
      allow delete: if isAdmin();
    }
    
    // Reglas para inventarios de propiedades
    match /properties/{propertyId} {
      // Los admins pueden ver todas las propiedades
      // Los usuarios normales solo pueden ver sus propias propiedades
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Solo el propietario puede crear propiedades
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Solo el propietario o admin pueden actualizar
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Solo el propietario o admin pueden eliminar
      allow delete: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Reglas para espacios de propiedades
    match /rooms/{roomId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Reglas para tickets
    match /tickets/{ticketId} {
      // Los admins pueden ver todos los tickets
      // Los técnicos pueden ver los tickets asignados
      // Los clientes solo pueden ver sus propios tickets
      allow read: if canReadTicket(resource.data);
      
      // Permitir creación al propietario (cliente) o a roles administrativos (coordinador/admin)
      allow create: if isAuthenticated() && (
        isAdmin() ||
        isOwner(request.resource.data.userId) ||
        isTicketClient(request.resource.data)
      );
      
      // El propietario, cliente, técnico asignado o admin pueden actualizar
      allow update: if isAdmin() ||
                      isOwner(resource.data.userId) ||
                      isTicketClient(resource.data) ||
                      isTicketTechnician(resource.data);
      
      // Solo admin o propietario pueden eliminar
      allow delete: if isAdmin() || isOwner(resource.data.userId);
    }
    
    // Reglas para captaciones de inmuebles (property_listings)
    match /property_listings/{listingId} {
      // Los admins pueden ver todas las captaciones
      // Los usuarios normales solo pueden ver sus propias captaciones
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Solo el usuario puede crear sus captaciones
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Solo el propietario o admin pueden actualizar
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Solo el propietario o admin pueden eliminar
      allow delete: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Reglas para actas de inventario
    match /inventory_acts/{actId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.createdBy == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.createdBy == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // Reglas para tours virtuales
    match /virtual_tours/{tourId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin() || 
                      (isAuthenticated() && resource.data.userId == request.auth.uid);
    }
    
    // Reglas para fotos 360° guardadas temporalmente
    match /saved_photos_360/{photoId} {
      // Permitir lectura si es admin o propietario de la foto
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.user_id == request.auth.uid);
      
      // Permitir crear fotos guardadas si está autenticado y es el propietario
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      
      // Permitir actualizar y eliminar si es admin o propietario de la foto
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.user_id == request.auth.uid);
      allow delete: if isAdmin() || 
                      (isAuthenticated() && resource.data.user_id == request.auth.uid);
    }
    
    // Reglas para chat de tickets
    match /ticket_messages/{messageId} {
      // Permitir lectura si es admin, propietario del ticket o técnico asignado
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Bloquear todas las demás colecciones por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
